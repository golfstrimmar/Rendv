include ../utils/mixins


header#header.header
  .header__wrapper
    .header__top.header-top
      .container
        .header-top__body
          a(href="#!").header-top__location.header-top-location
            span.icon-location
              span.path1
              span.path2
            .header-top-location__text  Новосибирск
          .header-top__currency.header-top-currency
            .header-top-currency__body
              .header-top-currency__item  
                span USD   
                span 73.31 руб. 
                span  (-0,36)
              .header-top-currency__item
                span  EUR   
                span  88.94 руб. 
                span (-0,26)
          .header-top__button
            +btn--success('Вход и регистрация')
    hr
    
    .header__main.header-main
      .container
        .header-main__body
          a.header-main__logo(href="#!")
            img(src="assets/img/header/logo-1.svg",alt="img")
          .header-main__menu.header-main-menu
            .header__menu_overlay
            i.header-close.fa.fa-times
            ul
              - 
                items = [
                { title: "Недвижимость "},
                { title: "Финансы "},
                { title: "Рейтинг компаний "},
                { title: "Биржа услуг "},
                { title: "Новости"},
                { title: "Блоги"},
                { title: "Мнение эксперта"},
                ]
              each item in items  
                li.header-main-menu__item
                  a.header-main-menu__link(href="#!")=item.title

          button.btn--success.btn--success-icon.header-main__button(type='button') 
            span.icon-plus
            span Разместить объявление
      
    .container-fluid 
      .header__select.header-select
        .ibg.bg
          img(src="assets/img/header/top-img.webp",alt="top-img")
        .header-select__body
          h1.header-select__title Поможем воплотить мечту в реальность
          .header-select__filter
            .filter__body
              - 
                items = [
                  { title: "Купить",text:"№1 "},
                  { title: "Снять",text:"№2"},
                  { title: "Посуточно",text:"№3"},
                  { title: "Новостройки",text:"№4"},
                ]

              each item in items
                .filter__item.filter-item
                  .filter-item__body
                    .filter-item__title.filterDep-title-js=item.title 
                        //- ---------------------------------------------
                    .filter__drop.filter__drop_sub.filter-drop.filterDep-drop-js
                      .filter-drop__body
                        - 
                          items = [
                            { title: "Коммерческую"},
                            { title: "Комнат"},
                            { title: "Стоимость"},
                          ]
                        each item in items
                          .filter__item.filter-item
                            .filter-item__body
                              .filter-item__title.filterDep-title-js=item.title 
                                .filter-item__img.icon-chevron-down.filterDep-img-js
                              .filter__drop.filter-drop.filterDep-drop-js
                                .filter-drop__body
                                  p какой-то контент для 
                                  span=item.title
                        .filter-drop__info
                          a.filter-drop__adress(href="#!") Адрес или ЖК
                          a.filter-drop__metro(href="#!") Метро 
          .header-select__buttons
            +btn--light('Смотреть на карте')
            +btn--success('Показать 155 523')

 

      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
